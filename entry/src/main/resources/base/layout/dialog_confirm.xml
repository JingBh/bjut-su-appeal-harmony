<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:dialog_confirm"
    ohos:height="match_content"
    ohos:width="320vp"
    ohos:background_element="$graphic:shape_dialog_center"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="26vp"
        ohos:text="$string:dialog_confirm_title"
        ohos:text_size="16fp"
        ohos:text_weight="600"
        ohos:text_color="$color:gray_900"
        ohos:text_alignment="center" />

    <Text
        ohos:id="$+id:dialog_confirm_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_size="14fp"
        ohos:line_height_num="1.2"
        ohos:text_color="$color:gray_600"
        ohos:text_alignment="center"
        ohos:top_margin="8vp"
        ohos:bottom_padding="26vp"
        ohos:start_padding="26vp"
        ohos:end_padding="26vp" />

    <Component
        ohos:height="0.5vp"
        ohos:width="match_parent"
        ohos:background_element="$color:vant_cell_border_color" />

    <DirectionalLayout
        ohos:height="48vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:dialog_confirm_cancel"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="$string:dialog_confirm_cancel"
            ohos:text_size="16fp"
            ohos:text_color="$color:gray_900"
            ohos:text_alignment="center" />

        <Component
            ohos:height="match_parent"
            ohos:width="0.5vp"
            ohos:background_element="$color:vant_cell_border_color" />

        <Button
            ohos:id="$+id:dialog_confirm_confirm"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:text="$string:dialog_confirm_confirm"
            ohos:text_size="16fp"
            ohos:text_color="$color:brand"
            ohos:text_alignment="center" />

    </DirectionalLayout>

</DirectionalLayout>
